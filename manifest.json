{
    "manifest_version": 2,
    "name": "Session Saver",
    "version": "0.1",

    "background": {
        "persistent": false, // As explained above
        "scripts": ["TabBackGround.js"] // Multiple comma separated names of background scripts can be added 
    },

    "icons": {
        "16": "session-16.png",
        "48": "session-48.png",
        "128": "session-128.png"
    },

    "browser_action": {
        "default_icon": "session-16.png",
        "default_popup": "popup.html"
    },

    "options_page": "options.html",

    "permissions": [
          "tabs",
          "storage"
    ],

    "commands":
    {
        "save-and-close" : 
        {
            "suggested_key": {
                "default": "Alt+A",
                "mac": "Command+Shift+0" 
            },
            "description" : "Saves current window and closes it."
        }
    }

}